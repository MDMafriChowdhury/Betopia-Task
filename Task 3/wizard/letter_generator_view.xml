<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_letter_generator_form" model="ir.ui.view">
        <field name="name">hr.letter.generator.form</field>
        <field name="model">hr.letter.generator</field>
        <field name="arch" type="xml">
            <form string="Generate Employee Letter">
                <group>
                    <group>
                        <field name="employee_id"/>
                        <field name="letter_type_id"/>
                    </group>
                </group>
                <separator string="Letter Preview (Editable)"/>
                <!-- HTML Widget for live preview -->
                <field name="preview_content" widget="html" 
                       options="{'style-inline': true, 'codeview': true}" 
                       nolabel="1"/>
                <footer>
                    <button string="Download PDF" name="action_print_pdf" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_hr_letter_generator" model="ir.actions.act_window">
        <field name="name">Generate Letter</field>
        <field name="res_model">hr.letter.generator</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu Item (Under Employees) -->
    <menuitem id="menu_hr_letter_generator" 
              name="Generate Letter" 
              parent="hr.menu_hr_employee_payroll" 
              action="action_hr_letter_generator" 
              sequence="10"/>
</odoo>