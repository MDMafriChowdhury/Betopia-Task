<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View (Formerly Tree View) -->
    <record id="view_hr_letter_type_list" model="ir.ui.view">
        <field name="name">hr.letter.type.list</field>
        <field name="model">hr.letter.type</field>
        <field name="arch" type="xml">
            <!-- Odoo 19 requires <list> instead of <tree> -->
            <list string="Letter Types">
                <field name="name"/>
                <field name="view_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hr_letter_type_form" model="ir.ui.view">
        <field name="name">hr.letter.type.form</field>
        <field name="model">hr.letter.type</field>
        <field name="arch" type="xml">
            <form string="Letter Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="view_id" domain="[('type', '=', 'qweb')]"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hr_letter_type" model="ir.actions.act_window">
        <field name="name">Letter Types</field>
        <field name="res_model">hr.letter.type</field>
        <!-- Update view_mode to use 'list' -->
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item (Under HR Configuration) -->
    <menuitem id="menu_hr_letter_type" 
              name="Letter Types" 
              parent="hr.menu_human_resources_configuration" 
              action="action_hr_letter_type" 
              sequence="100"/>
</odoo>