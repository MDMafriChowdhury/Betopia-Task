<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_user_change_password_wizard_form" model="ir.ui.view">
        <field name="name">user.change.password.wizard.form</field>
        <field name="model">user.change.password.wizard</field>
        <field name="arch" type="xml">
            <form string="Change Password">
                <group>
                    <field name="current_password" password="True"/>
                    <field name="new_password" password="True"/>
                    <field name="confirm_password" password="True"/>
                </group>
                <footer>
                    <button string="Change Password" name="action_change_password" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>